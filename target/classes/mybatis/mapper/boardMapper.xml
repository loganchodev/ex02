<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Board"> <!-- MyBatis 매퍼 파일. SQL 쿼리들이 정의되어 있어 -->
    
	<!-- 데이터 삽입 쿼리 정의 -->
    <insert id="insert" parameterType="Board">
        <!-- board_table에 데이터를 삽입하는 SQL 쿼리. Board 객체의 속성을 사용해 값을 넣어줌 -->
        insert into board_table(boardWriter, boardPass, boardTitle, boardContents)
        values (#{boardWriter}, #{boardPass}, #{boardTitle}, #{boardContents})
    </insert>
    
    <!-- 목록 조회 쿼리 정의 -->
    <select id="findAll" resultType="board">
    	<!-- board_table에서 모든 게시글을 조회하여 내림차순으로 정렬하는 SQL 쿼리 -->
    	select * from board_table order by id desc
    </select>
    
    <!-- 상세 조회 쿼리 정의 -->
    <select id="findById" parameterType="Long" resultType="board">
    	<!-- 특정 id 값을 가진 게시글을 조회하는 SQL 쿼리 -->
    	select * from board_table where id=#{id}
    </select>
    
    <!-- 조회수 업데이트 쿼리 정의 -->
    <update id="updateHits" parameterType="Long">
    	<!-- 특정 id 값을 가진 게시글의 조회수를 1 증가시키는 SQL 쿼리 -->
    	update board_table set boardHits = boardHits + 1 where id=#{id}
    </update>
    
    <!-- 게시글 삭제 쿼리 정의 -->
    <delete id="delete" parameterType="Long">
    	<!-- 특정 id 값을 가진 게시글을 삭제하는 SQL 쿼리 -->
    	delete from board_table where id=#{id}
    </delete>
    
    <!-- 게시글 업데이트 쿼리 정의 -->
    <update id="update" parameterType="board">
    	<!-- 특정 id 값을 가진 게시글의 제목과 내용을 업데이트하는 SQL 쿼리 -->
    	update board_table set boardTitle=#{boardTitle}, boardContents=#{boardContents} where id=#{id}
    </update>
</mapper>
